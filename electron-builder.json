{
  "appId": "com.telechips.soc.configuration.tool",
  "productName": "Telechips SOC Configuration Tool",
  "artifactName": "${productName} Setup ${version}.${ext}",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "main.cjs",
    "preload.cjs",
    "package.json",
    "assets/**/*",
    "public/config/**/*",
    "scripts/**/*",
    "!**/*.ts",
    "!**/node_modules/{.cache,**/test,**/tests,**/*.md,**/*.markdown}",
    "!src/**/*"
  ],
  "extraResources": [
    {
      "from": "tools/",
      "to": "tools",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/telechips.ico",
    "signAndEditExecutable": false,
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Telechips SOC Tool"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "assets/telechips.icns",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm"],
    "icon": "assets/telechips.png",
    "category": "Development"
  }
}