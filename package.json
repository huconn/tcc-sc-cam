{
  "name": "telechips-soc-configuration-tool",
  "version": "0.9.0",
  "description": "Telechips SOC Configuration Tool",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5175 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:win": "node scripts/build-with-version.js hash win32",
    "build:win:simple": "npm run build && electron-builder --win",
    "build:win:build": "node scripts/build-with-version.js build win32",
    "build:win:full": "node scripts/build-with-version.js both win32",
    "build:mac": "node scripts/build-with-version.js hash darwin",
    "build:mac:simple": "npm run build && electron-builder --mac",
    "build:linux": "node scripts/build-with-version.js hash linux",
    "build:linux:simple": "npm run build && electron-builder --linux",
    "dist": "node scripts/build-with-version.js hash",
    "start": "electron ."
  },
  "author": "Daekeun Kang",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "zustand": "^5.0.8"
  }
}
